<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CloudFileClient.Pages.MainPage"
             Title="CloudFile"
             BackgroundColor="#f4f6fc">

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- Header with user info and logout button -->
        <Grid Grid.Row="0" BackgroundColor="#3B2D79" Padding="20,25,20,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="CloudFile" 
                   Grid.Column="0"
                   TextColor="White" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   VerticalOptions="Center" />

            <Label x:Name="UserNameLabel" 
                   Grid.Column="1"
                   Text="Welcome, User" 
                   TextColor="White" 
                   FontSize="16"
                   Margin="20,0,0,0"
                   HorizontalOptions="Start"
                   VerticalOptions="Center" />

            <Button x:Name="LogoutButton" 
                    Grid.Column="2"
                    Text="Logout" 
                    BackgroundColor="#4C3B8A"
                    TextColor="White"
                    Clicked="LogoutButton_Clicked"
                    CornerRadius="8"
                    Padding="15,5" />
        </Grid>

        <!-- Directory navigation and path display -->
        <Grid Grid.Row="1" Padding="20,15" BackgroundColor="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Back button -->
            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Text="â†‘ Back"
                    BackgroundColor="#F0F0F0"
                    TextColor="#333"
                    Clicked="BackButton_Clicked"
                    IsEnabled="False"
                    CornerRadius="8"
                    Padding="15,8" />

            <!-- Current path display -->
            <Label x:Name="PathLabel"
                   Grid.Column="1"
                   Text="Home"
                   TextColor="#333"
                   FontSize="16"
                   VerticalOptions="Center"
                   Margin="15,0" />

            <!-- Refresh button -->
            <Button x:Name="RefreshButton"
                    Grid.Column="2"
                    Text="Refresh"
                    BackgroundColor="#F0F0F0"
                    TextColor="#333"
                    Clicked="RefreshButton_Clicked"
                    CornerRadius="8"
                    Padding="15,8" />
        </Grid>

        <!-- Main content area for files and directories -->
        <Grid Grid.Row="2" Padding="10">
            <ScrollView>
                <VerticalStackLayout>
                    <!-- Activity indicator and status label -->
                    <Grid IsVisible="False" x:Name="LoadingGrid">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <ActivityIndicator x:Name="ActivitySpinner"
                                             IsRunning="False"
                                             Color="#3B2D79"
                                             HeightRequest="50"
                                             WidthRequest="50" />
                            
                            <Label x:Name="StatusLabel"
                                   Text="Loading..."
                                   TextColor="#3B2D79"
                                   HorizontalOptions="Center"
                                   Margin="0,10" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Empty state message -->
                    <VerticalStackLayout x:Name="EmptyStateLayout" 
                                         IsVisible="False"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Margin="0,50">
                        <Image Source="folder_empty.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               HorizontalOptions="Center" />
                        
                        <Label Text="This folder is empty"
                               FontSize="20"
                               TextColor="#666"
                               HorizontalOptions="Center"
                               Margin="0,20" />
                        
                        <Label Text="Upload files or create folders to get started"
                               FontSize="16"
                               TextColor="#888"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <!-- Create Directory Button -->
                    <Frame Grid.Column="0"
                           BackgroundColor="#3B2D79"
                           BorderColor="Transparent"
                           CornerRadius="10"
                           HasShadow="True"
                           Padding="15"
                           Margin="5">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="CreateDirectoryFrame_Tapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Image Source="add_folder_icon.png"
                                   HeightRequest="32"
                                   WidthRequest="32"
                                   HorizontalOptions="Center" />
        
                            <Label Text="Create Folder"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="0,8,0,0" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Upload File Button -->
                    <Frame Grid.Column="1"
                           BackgroundColor="#4C3B8A"
                           BorderColor="Transparent"
                           CornerRadius="10"
                           HasShadow="True"
                           Padding="15"
                           Margin="5">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UploadFileFrame_Tapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Image Source="upload_icon.png"
                                   HeightRequest="32"
                                   WidthRequest="32"
                                   HorizontalOptions="Center" />
        
                            <Label Text="Upload File"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="0,8,0,0" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Collection of directories -->
                    <Label Text="Folders"
                           FontSize="18"
                           TextColor="#333"
                           FontAttributes="Bold"
                           Margin="10,10,0,5" />
                    
                    <CollectionView x:Name="DirectoriesCollection"
                                  ItemsSource="{Binding Directories}"
                                  SelectionMode="Single"
                                  SelectionChanged="DirectoriesCollection_SelectionChanged"
                                  EmptyView="No folders found."
                                  HeightRequest="150"
                                  Margin="0,0,0,10">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="2"
                                             HorizontalItemSpacing="10"
                                             VerticalItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White"
                                       BorderColor="#EEE"
                                       CornerRadius="10"
                                       Padding="15">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*">
                                        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                               Source="folder_icon.png"
                                               HeightRequest="40"
                                               WidthRequest="40"
                                               VerticalOptions="Center"
                                               Margin="0,0,10,0" />
                                        
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="16"
                                               TextColor="#333"
                                               LineBreakMode="TailTruncation" />
                                        
                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding CreatedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                               FontSize="12"
                                               TextColor="#888" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Files section -->
                    <Label Text="Files"
                           FontSize="18"
                           TextColor="#333"
                           FontAttributes="Bold"
                           Margin="10,10,0,5" />
                    
                    <CollectionView x:Name="FilesCollection"
                                  ItemsSource="{Binding Files}"
                                  SelectionMode="Single"
                                  SelectionChanged="FilesCollection_SelectionChanged"
                                  EmptyView="No files found."
                                  HeightRequest="300"
                                  Margin="0,0,0,20">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical"
                                             ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White"
                                       BorderColor="#EEE"
                                       CornerRadius="10"
                                       Padding="15">
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                               Source="{Binding FileTypeIcon}"
                                               HeightRequest="40"
                                               WidthRequest="40"
                                               VerticalOptions="Center"
                                               Margin="0,0,15,0" />
                                        
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding FileName}"
                                               FontSize="16"
                                               TextColor="#333"
                                               LineBreakMode="TailTruncation" />
                                        
                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding FormattedSize}"
                                               FontSize="12"
                                               TextColor="#888" />
                                        
                                        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                                Text="Download"
                                                BackgroundColor="#3B2D79"
                                                TextColor="White"
                                                CornerRadius="8"
                                                Padding="10,5"
                                                FontSize="12"
                                                CommandParameter="{Binding Id}"
                                                Clicked="DownloadButton_Clicked" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>